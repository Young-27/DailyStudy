    <div class="outer">
        <br><h2 align="center">일반게시판 상세보기</h2>
        <br>

        <table id="detail-area" align="center" border="1">

            <tr>
                <th width="70">카테고리</th>
                <td width="70">${ b.category }</td>
                <th width="70">제목</th>
                <td width="350">${ b.boardTitle }</td>
            </tr>
            <tr>
                <th>작성자</th>
                <td>${ b.boardWriter }</td>
                <th>작성일</th>
                <td>${ b.createDate }</td>
            </tr>
            <tr>
                <th>내용</th>
                <td colspan="3">
                    <p style="height: 200px;">${ b.boardContent }</p>
                </td>
            </tr>
            <tr>
                <th>첨부파일</th>
                <td colspan="3">
                    <c:choose>
                    	<c:when test="${ at == null }">
                    		첨부파일이 없습니다.
                    	</c:when>
                    	<c:otherwise>
                    		<a href="/jsp/resources/board_upfiles/2021051320315867182.jpg">${ at.originName }</a>
                    	</c:otherwise>
                    </c:choose>
                </td>
            </tr>

        </table>
        <br>

        <div align="center">
            <a href="list.bo?currentPage=1" class="btn">목록가기</a>
	        <c:if test="${ loginUser != null and loginUser.userId == b.boardWriter }">
	        	<!-- 로그인 한 사용자가 게시글작성자일 경우-->
	            <a href="updateForm.bo?bno=${ b.boardNo }" class="btn btn-warning btn-sm">수정하기</a>
	            <a href="delete.bo?bno=${ b.boardNo }" class="btn btn-danger btn-sm">삭제하기</a>
	        </c:if>
        </div>

        <br>

        <div id="reply-area">

            <table border="1" align="center">
                <thead>
                	<c:choose>
                		<c:when test="${ loginUser != null}">
		                    	<!--로그인이 되어있을 경우-->
			                    <tr>
			                        <th>댓글작성</th>
			                        <td>
			                            <textarea id="replyContent" rows="3" cols="50" style="resize: none;"></textarea>
			                        </td>
			                        <td><button onclick="insertReply();">댓글등록</button></td>
			                    </tr>
			            </c:when>
			            <c:otherwise>
			            	 <!-- 로그인이 되어있지 않을 경우-->
		                    <tr>
		                        <th>댓글작성</th>
		                        <td>
		                            <textarea rows="3" cols="50" style="resize: none; color:gray" readonly>로그인 후 이용가능한 서비스입니다.</textarea>
		                        </td>
		                        <td><button disabled>댓글등록</button></td>
		                    </tr>
			            </c:otherwise>
			       </c:choose>
                </thead>
                <tbody>
                    

                </tbody>
            </table>
            
            <script>
            	$(function(){
            		selectReplyList();
            		
            		setInterval(selectReplyList, 1000); // 댓글 실시간 확인 가능
            	})
            	
            	function insertReply(){
            		$.ajax({
            			url:"rinsert.bo",
            			data:{
            				content:$("#replyContent").val(),
            				bno:${ b.boardNo }
            			},
            			type:"post",
            			success:function(result){
            				
            				if(result > 0){ // 댓글작성 성공 => 갱신된 댓글 리스트 조회
            					selectReplyList();
            					$("#replyContent").val("");
            				}
            				
            			}, error:function(){
            				console.log("댓글 작성용 ajax통신실패");
            			}
            		});
            	}
            	
            	function selectReplyList(){
            		$.ajax({
            			url:"rlist.bo",
            			data:{bno:${ b.boardNo }},
            			success:function(list){
            				console.log(list); // [{}, {}, ..] | []
            				var result = "";
            				for(var i in list){
            					result += "<tr>"
				                       +     "<td>" + list[i].replyWriter + "</td>"
				                       +     "<td>" + list[i].replyContent + "</td>"
				                       +     "<td>" + list[i].createDate + "</td>"
				                       +  "</tr>";
            				}
            				
            				$("#reply-area tbody").html(result);
            			},error:function(){
            				console.log("댓글리스트 조회용 ajax통신 실패");
            			}
            		})
            	}
            </script>
            
            <br><br>

        </div>


